{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Dingo",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#decorators"
		},
		{
			"include": "#str_templates"
		},
		{
			"include": "#ids"
		},
		{
			"include": "#function_args"
		},
		{
			"include": "#punctuation"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash",
				"match": "//.*$"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.dingo",
				"match": "\\b(define|apply|pattern|module|spec|for|in|import|as)\\b"
			},
			{
				"name": "entity.name.section",
				"match": "(?<=\\bpattern\\s)\\w+\\b"
			},
			{
				"name": "storage.type.return-type",
				"match": "(?<=\\bas\\s)\\w+\\b"
			},
			{
				"name": "entity.name.function",
				"match": "(?<=\\bspec\\s)\\w+\\b"
			},
			{
				"name": "storage.type.return-type",
				"match": "(?<=\\bfor\\s)\\w+\\b"
			}]
		},
		"decorators": {
			"patterns": [{
				"name": "keyword.other.decorator",
				"match": "[\\-+@$#]"
			}]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.definition",
					"match": "[{}\\[\\]\\(\\):,;<>]"
				},
				{
					"name": "comment.line",
					"match": "%"
				}
			]
		},
		"str_templates": {
			"patterns": [{
				"name": "storage.type.return-type",
				"begin": "\\{",
				"end": "\\}",
				"match": "(?<=\\{)\\w+(?=\\})"
			  }]
		},
		"function_args": {
			"begin": "\\(",
			"end": "\\)",
			"patterns": [
				{
					"name": "variable.parameter.function",
					"match": "(?<=[\\(,])[^,]+(?=[\\),])"
				},
				{
					"name": "punctuation.definition",
					"match": ","
				}
			]
		},
		"ids": {
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "(::)?([a-zA-Z_]+)(::[a-zA-Z_]+)*:(?!:)",
					"captures": {
						"2": {
							"name": "entity.name.function",
							"patterns": [
								{
									"name": "entity.name.function",
									"match": "([a-zA-Z_]+)"
								}
							]
						}
					}
				}
			]
		}
	},
	"scopeName": "source.dingo"
}