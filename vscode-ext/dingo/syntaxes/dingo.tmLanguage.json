{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Dingo",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#decorators"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#ids"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.dingo",
				"match": "\\b(define|apply|pattern|module|spec|for|in|import|as)\\b"
			},
			{
				"name": "entity.name.section",
				"match": "(?<=\\bpattern\\s)\\w+\\b"
			},
			{
				"name": "storage.type.return-type",
				"match": "(?<=\\bas\\s)\\w+\\b"
			},
			{
				"name": "entity.name.function",
				"match": "(?<=\\bspec\\s)\\w+\\b"
			}]
		},
		"decorators": {
			"patterns": [{
				"name": "keyword.other.decorator",
				"match": "[\\-+@$]"
			}]
		},
		"punctuation": {
			"patterns": [{
				"name": "punctuation.definition",
				"match": "[{}\\[\\]()\\:,;<>]"
			}]
		},
		"functions": {
			"patterns": [
				{
					"name": "function.declaration",
					"match": "(\\b\\w+\\b)\\s+(\\b[\\<\\{\\}\\>\\w]+\\b)\\s*\\((\\b[^\\)]\\b)\\)",
					"captures": {
						"1": { "name": "storage.type.return-type" },
						"2": { "name": "entity.name.function" },
						"3": { "name": "meta.function.arguments" }
					}
				}
			]
		},
		"ids": {
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "(::)?([a-zA-Z_]+)(::[a-zA-Z_]+)*:(?!:)",
					"captures": {
						"2": {
							"name": "entity.name.function",
							"patterns": [
								{
									"name": "entity.name.function",
									"match": "([a-zA-Z_]+)"
								}
							]
						}
					}
				}
			]
		}
	},
	"scopeName": "source.dingo"
}